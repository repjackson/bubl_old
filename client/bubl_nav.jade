template(name='nav')
    .ui.borderless.menu
        a.ui.header.item(href='/' class="{{isActivePath '/'}}")
            |Bubble
        .right.menu
            if currentUser
                .ui.simple.dropdown.item
                    i.plus.icon
                    span.text Add Doc
                    i.dropdown.icon
                    .menu
                        #newFromSelection.item
                            i.external.square.icon
                            |From Selection
                        #addDoc.item
                            i.file.outline.icon
                            |Blank
                        .header From Bookmarks
                        each user.bookmarks
                            .item.addFromBookmark
                                each this
                                    .ui.label #{this}

                a.item(href='/profile' class="{{isActivePath '/profile'}}")
                    i.user.icon
                    | #{user.username}
                a.item(href='/messages' class="{{isActivePath '/messages'}}")
                    i.mail.icon
            +atNavButton
