template(name='cloud')
    .ui.center.aligned.segment
        if selectedtags
            #cleartags.ui.active.big.compact.icon.button
                i.remove.icon
        if selectedtags
            each selectedtags
                a.ui.active.big.compact.button.unselecttag
                    strong #{this}
        each globaltags
            .ui.compact.basic.button.selecttag(class=globaltagClass) #{this.name}
                small #{this.count}
